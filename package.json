{
	"name": "vslab",
	"displayName": "vslab",
	"description": "For own Unity3D project",
	"publisher": "sqz",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vslab.version",
				"title": "VSLab Version"
			},
			{
				"command": "vslab.runUIDuplicateCheck",
				"title": "VSLab Check UI Image Duplicate"
			},
			{
				"command": "vslab.shortcuts",
				"title": "VSLab Shortcuts"
			}
		],
		"configuration": {
			"type": "object",
			"title": "VSLab Configuration",
			"properties": {
				"vslab.localization.formatOnSave": {
					"type": "boolean",
					"default": false,
					"description": "Auto format on save"
				},
				"vslab.localization.exportCSOnSave": {
					"type": "boolean",
					"default": true,
					"description": "Auto export c# on save"
				},
				"vslab.localization.semanticHighlight": {
					"type": "boolean",
					"default": true,
					"description": "Highlight document content"
				},
				"vslab.tools.configPath": {
					"type": "string",
					"default": "",
					"description": "Tools config file path"
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"command": "vslab.runUIDuplicateCheck",
					"group": "runCommand",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vslabTools",
					"title": "VSLab",
					"icon": "images/tool-light.svg"
				}
			]
		},
		"views": {
			"vslabTools": [
				{
					"id": "vslabTools.shortcuts",
					"name": "Shortcuts"
				}
			]
		},
		"keybindings": [
			{
				"key": "alt+e",
				"command": "cursorEnd",
				"when": "textInputFocus"
			},
			{
				"key": "alt+h",
				"command": "cursorHome",
				"when": "textInputFocus"
			}
		],
		"languages": [
			{
				"id": "localizationConfig",
				"extensions": [
					".bytes"
				],
				"filenamePatterns": [
					"*Language_*.bytes",
					"*language_*.bytes"
				]
			}
		]
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/js-yaml": "^4.0.0",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.19.15",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.14.0",
		"@typescript-eslint/parser": "^4.14.0",
		"eslint": "^7.18.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"js-yaml": "^4.0.0"
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install"
	}
}